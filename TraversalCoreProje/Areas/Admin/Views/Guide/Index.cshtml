@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
}

<h1>Rehber Listesi</h1>

<table class="table table-bordered">

    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        
        <tr>
            <td>@item.GuideID</td>
            <td><img src="@item.Image" alt="" style="width:50px; height:50px; border-radius:50%; margin:auto"  /></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Status</td>
            <td><a href="#" class="btn btn-outline-success">Düzenle</a> </td>

        </tr>
    }

</table>

<a href="#" class="btn btn-outline-primary">Yeni Rehber Girişi</a>